<?xml version="1.0" encoding="utf-8"?>
<cz.prvaak.throughtheagesclock.gui.view.NewPlayersListView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal|top"
    android:layout_below="@+id/new_game_text"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    tools:showIn="@layout/activity_new_game">

    <include
        layout="@layout/new_player_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_player_0"/>

    <include
        layout="@layout/new_player_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_player_1"/>

    <include
        layout="@layout/new_player_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_player_2"/>

    <include
        layout="@layout/new_player_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_player_3"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/add_player_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</cz.prvaak.throughtheagesclock.gui.view.NewPlayersListView>