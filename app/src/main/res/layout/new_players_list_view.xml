<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal|top"
    android:layout_below="@+id/new_game_text"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/players_list_view"
    tools:showIn="@layout/activity_new_game">

    <include
        layout="@layout/player_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_0_overview"/>

    <include
        layout="@layout/player_details_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/player_0_details"/>

    <include
        layout="@layout/player_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_0_overview"/>

    <include
        layout="@layout/player_details_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/player_0_details"/>

    <include
        layout="@layout/player_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_0_overview"/>

    <include
        layout="@layout/player_details_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/player_0_details"/>

    <include
        layout="@layout/player_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_0_overview"/>

    <include
        layout="@layout/player_details_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/player_0_details"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/add_player_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>